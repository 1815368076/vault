<PageHeader as |p|>
  <p.levelLeft>
    <h1 class="title is-3">
      {{#link-to "vault.cluster.license" }}
        License
      {{/link-to}}
    </h1>
  </p.levelLeft>
</PageHeader>
<div class="field box is-fullwidth is-sideless is-paddingless is-marginless">
  {{info-table-row label="License ID" value=model.licenseId}}
  {{#if model.startTime}}
    {{#info-table-row label="Start time" value=model.startTime}}
      {{moment-format model.startTime 'MMM DD, YYYY hh:mm:ss A'}}
      <br/>
      <code>
        {{model.startTime}}
      </code>
    {{/info-table-row}}
    {{info-table-row label="Expires in" value=(moment-from-now model.expireTime interval=1000 hideSuffix=true)}}
  {{/if}}
  {{#if model.expireTime}}
    {{#info-table-row label="Expiration time" value=model.expireTime}}
      {{moment-format model.expireTime 'MMM DD, YYYY hh:mm:ss A'}}
      <br/>
      <code>
        {{model.expireTime}}
      </code>
    {{/info-table-row}}
    {{info-table-row label="Expires in" value=(moment-from-now model.expireTime interval=1000 hideSuffix=true)}}
  {{/if}}
</div>
